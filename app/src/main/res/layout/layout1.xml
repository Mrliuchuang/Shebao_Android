<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise1"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tologin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff "
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/denglutouxiang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@mipmap/txtx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/denglutouxiang"
            android:textColor="#000000"
            android:text="李珍" />


    </RelativeLayout>
    <RelativeLayout
       android:id="@+id/gerenxinxishezhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/main"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/image_you1"
       android:layout_marginLeft="13dp"
            android:background="@mipmap/ryb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image1"
            android:textColor="#000000"
            android:text="个人信息" />

        <ImageView
            android:id="@+id/image_you1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/qianjin" />
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/renzhengrizhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:background="@mipmap/zinv" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image2"
            android:textColor="#000000"
            android:text="认证日志记录" />

        <ImageView
            android:id="@+id/image_you2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/qianjin" />
    </RelativeLayout>
    <RelativeLayout
      android:id="@+id/jiatingchengyuanxinxi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:background="@mipmap/jtcy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image3"
            android:textColor="#000000"
            android:text="家庭成员信息" />

        <ImageView
            android:id="@+id/image_you3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/qianjin" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gongzuodi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:background="@mipmap/dz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image4"
            android:textColor="#000000"
            android:text="工作地或常住地" />

        <ImageView
            android:id="@+id/image_you4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/qianjin" />
    </RelativeLayout>
</LinearLayout>
